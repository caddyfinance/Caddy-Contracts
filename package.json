{
  "name": "hardhat-project",
  "version": "1.0.0",
  "description": "A Hardhat project for the Options Protocol",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "deploy:monad": "npx hardhat ignition deploy ./ignition/modules/Options.ts --network monad",
    "deploy:status": "npx hardhat ignition status",
    "deploy:verify": "npx hardhat ignition verify",
    "verify:monad": "npx hardhat verify --network monad",
    "clean": "npx hardhat clean"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@types/node": "^22.13.4",
    "hardhat": "^2.22.18",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3",
    "@openzeppelin/hardhat-upgrades": "^3.9.0",
    "dotenv": "^16.4.7"
  }
}
